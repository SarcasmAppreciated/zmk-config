#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

#define DEFAULT 0
#define PS 1

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// ---------------------------------------------------------------------------------------------------------------------------------
// |  ESC  |  L CTRL  |  L  |  M   |  E   |  B   |                                          |  Y   |  U    |  I    |  O   |   P   |   \  |
// |  TAB  |  V  |  UARW  |  Z   |  C   |  X   |                                          |  H   |  J    |  K    |  L   |   ;   |   '  |
// | M(1) |  LARW  |  DARW  |  RARW   |  T   |  MOD_LSFT N   | L SHIFT | L SHIFT |  | L SHIFT | L SHIFT |  N   |  M    |  ,    |  .   |   /   | CTRL |
//                     | RET  | R  | BKSP  |  L ALT  |   L SHIFT   |  |   RET   |  SPACE  | TAB  | BSPC  | R-ALT |
            bindings = <
    &kp ESC  &kp LCTL &kp L &kp M &kp E &kp B                                            &kp Y &kp U  &kp I    &kp O   &kp P    &kp BSLH
    &kp TAB  &kp V &kp UARW &kp Z &kp C &kp X                                            &kp H &kp J  &kp K    &kp L   &kp SCLN &kp QUOT
    &tog PS &kp LARW &kp DARW &kp RARW &kp T &mt MOD_LSFT N &kp LSFT &kp LSFT        &kp LSFT &kp LSFT &kp N &kp M  &kp CMMA &kp DOT &kp FSLH &kp RCTL
                  &kp RET &kp R &kp RET &kp LALT &kp LSFT            &kp RET  &kp SPC  &kp TAB &kp BKSP &kp RALT
            >;

            sensor-bindings = <&inc_dec_cp M_VOLU M_VOLD &inc_dec_kp PGUP PGDN>;
        };
        
        ps_layer {
// ---------------------------------------------------------------------------------------------------------------------------------
// |  ESC  |  L CTRL  |  L  |  M   |  E   |  B   |                                          |  Y   |  U    |  I    |  O   |   P   |   \  |
// |  TAB  |  V  |  UARW  |  Z   |  C   |  X   |                                          |  H   |  J    |  K    |  L   |   ;   |   '  |
// | M(1) |  LARW  |  DARW  |  RARW   |  T   |  MOD_LSFT N   | L SHIFT | L SHIFT |  | L SHIFT | L SHIFT |  N   |  M    |  ,    |  .   |   /   | CTRL |
//                     | RET  | R  | RET  |  L ALT  |   L SHIFT   |  |   RET   |  SPACE  | TAB  | BSPC  | R-ALT |
            bindings = <
    &kp ESC  &kp LCTL &kp L &kp M &kp E &kp B                                            &kp Y &kp U  &kp I    &kp O   &kp P    &kp BSLH
    &kp TAB  &kp V &kp UARW &kp Z &kp C &kp X                                            &kp H &kp J  &kp K    &kp L   &kp SCLN &kp QUOT
    &tog PS &kp LARW &kp DARW &kp RARW &kp T &mt MOD_LSFT N &kp LSFT &kp LSFT        &kp LSFT &kp LSFT &kp N &kp M  &kp CMMA &kp DOT &kp FSLH &kp RCTL
                  &kp RET &kp R &kp RET &kp LALT &kp LSFT            &kp RET  &kp SPC  &kp TAB &kp BKSP &kp RALT
            >;

            sensor-bindings = <&inc_dec_kp LBKT RBKT>;
        };
    };
};